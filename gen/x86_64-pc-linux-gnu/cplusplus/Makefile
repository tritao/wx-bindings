# GNU Make workspace makefile autogenerated by Premake

ifndef config
  config=debug
endif

ifndef verbose
  SILENT = @
endif

ifeq ($(config),debug)
  wx_config = debug
  wx_test_config = debug
endif
ifeq ($(config),release)
  wx_config = release
  wx_test_config = release
endif

PROJECTS := wx wx-test

.PHONY: all clean help $(PROJECTS) 

all: $(PROJECTS)

wx:
ifneq (,$(wx_config))
	@echo "==== Building wx ($(wx_config)) ===="
	@${MAKE} --no-print-directory -C . -f wx.make config=$(wx_config)
endif

wx-test: wx
ifneq (,$(wx_test_config))
	@echo "==== Building wx-test ($(wx_test_config)) ===="
	@${MAKE} --no-print-directory -C . -f wx-test.make config=$(wx_test_config)
endif

clean:
	@${MAKE} --no-print-directory -C . -f wx.make clean
	@${MAKE} --no-print-directory -C . -f wx-test.make clean

help:
	@echo "Usage: make [config=name] [target]"
	@echo ""
	@echo "CONFIGURATIONS:"
	@echo "  debug"
	@echo "  release"
	@echo ""
	@echo "TARGETS:"
	@echo "   all (default)"
	@echo "   clean"
	@echo "   wx"
	@echo "   wx-test"
	@echo ""
	@echo "For more information, see https://github.com/premake/premake-core/wiki"